# Example environment configuration for Docker-based development
FRONTEND_PORT=3000
BACKEND_PORT=8000
PYTHON_PORT=5000
MONGO_URI=mongodb://localhost:27017/forgekeeper
# Uncomment and set if accessing OpenAI services
# OPENAI_API_KEY=sk-...

# vLLM-first configuration
LLM_BACKEND=vllm
VLLM_MODEL_CORE=mistral-nemo-instruct
VLLM_MODEL_CODER=codellama-13b-python
# service names from docker-compose; use localhost when running without Docker
VLLM_HOST_CORE=vllm-core
VLLM_PORT_CORE=8000
VLLM_HOST_CODER=vllm-coder
VLLM_PORT_CODER=8001
FK_CORE_API_BASE=http://vllm-core:8000
FK_CODER_API_BASE=http://vllm-coder:8001
VLLM_MAX_MODEL_LEN=4096
VLLM_TP=1
VLLM_GPU_MEMORY_UTILIZATION=0.9
VLLM_ENABLE_LOGPROBS=false
