# Database Configuration
# SQLite for development
DATABASE_URL="file:./dev.db"
# PostgreSQL for production
# DATABASE_URL="postgresql://user:password@localhost:5432/forgekeeper"

# Local Inference Configuration
LOCAL_QWEN_URL="http://127.0.0.1:8080"
PREFER_LOCAL_INFERENCE="true"

# Anthropic API Configuration
ANTHROPIC_API_KEY="sk-ant-..."

# OpenAI API Configuration (Optional Fallback)
# OPENAI_API_KEY="sk-..."

# Server Configuration
PORT="4000"
NODE_ENV="development"
LOG_LEVEL="debug"

# Workspace Limits
MAX_WORKSPACE_TOKENS="4000"
MAX_HYPOTHESES="5"
MAX_DECISIONS="10"
MAX_TOOL_RESULTS="10"

# Orchestration Configuration
MAX_ITERATIONS="10"
PARALLEL_PROPOSALS="true"

# Model Selection
# Opus 4.5 for deep reasoning
OPUS_MODEL="claude-opus-4-5-20251101"
# Sonnet 4.5 for balanced quality/cost
SONNET_MODEL="claude-sonnet-4-5-20250929"
# Haiku 4.5 for fast responses
HAIKU_MODEL="claude-haiku-4-5-20250815"

# Extended Thinking (Opus Only)
ENABLE_EXTENDED_THINKING="true"
MAX_THINKING_TOKENS="10000"
