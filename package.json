{
  "name": "forgekeeper",
  "version": "3.1.0",
  "description": "Minimal AI agent with Claude Code as the brain",
  "type": "module",
  "main": "index.js",
  "bin": {
    "forgekeeper": "./bin/forgekeeper.js"
  },
  "scripts": {
    "start": "node index.js",
    "dev": "node --watch index.js",
    "setup": "node setup.js",
    "telegram": "node mcp-servers/telegram.js",
    "telegram:standalone": "node mcp-servers/telegram.js",
    "test": "node --test ./tests/unit/*.test.js",
    "test:unit": "node --test ./tests/unit/*.test.js",
    "health": "node scripts/health-check.js",
    "pm2:start": "pm2 start ecosystem.config.cjs",
    "pm2:stop": "pm2 stop forgekeeper",
    "pm2:restart": "pm2 restart forgekeeper",
    "pm2:logs": "pm2 logs forgekeeper",
    "pm2:status": "pm2 status",
    "pm2:monit": "pm2 monit",
    "pm2:update": "node scripts/pm2-utils.js",
    "pm2:check": "node scripts/pm2-utils.js"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "grammy": "^1.39.3",
    "telegraf": "^4.16.3",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "pm2": "^6.0.14"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
