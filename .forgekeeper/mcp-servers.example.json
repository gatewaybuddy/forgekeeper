{
  "comment": "Model Context Protocol (MCP) Server Configuration",
  "description": "Define MCP servers to extend Forgekeeper capabilities. Each server provides tools, resources, and prompts.",
  "servers": {
    "github": {
      "enabled": true,
      "description": "GitHub integration - repos, issues, PRs, search",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
      }
    },
    "filesystem": {
      "enabled": true,
      "description": "Enhanced filesystem operations with unrestricted access",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "/workspace"],
      "env": {
        "ALLOWED_DIRECTORIES": "/workspace"
      }
    },
    "git": {
      "enabled": true,
      "description": "Advanced git operations",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-git"]
    },
    "postgres": {
      "enabled": false,
      "description": "PostgreSQL database queries and management",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-postgres"],
      "env": {
        "POSTGRES_CONNECTION_STRING": "${DATABASE_URL}"
      }
    },
    "puppeteer": {
      "enabled": false,
      "description": "Browser automation for testing and scraping",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-puppeteer"]
    },
    "slack": {
      "enabled": false,
      "description": "Slack integration for team communication",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-slack"],
      "env": {
        "SLACK_BOT_TOKEN": "${SLACK_TOKEN}"
      }
    },
    "google-drive": {
      "enabled": false,
      "description": "Google Drive document access",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-gdrive"],
      "env": {
        "GOOGLE_CLIENT_ID": "${GOOGLE_CLIENT_ID}",
        "GOOGLE_CLIENT_SECRET": "${GOOGLE_CLIENT_SECRET}"
      }
    },
    "brave-search": {
      "enabled": false,
      "description": "Web search via Brave Search API",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-brave-search"],
      "env": {
        "BRAVE_API_KEY": "${BRAVE_API_KEY}"
      }
    }
  },
  "defaults": {
    "timeout_ms": 30000,
    "retry_attempts": 2,
    "health_check_interval_ms": 60000
  }
}
